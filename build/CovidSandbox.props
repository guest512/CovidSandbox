<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <Configuration Condition="'$(Configuration)' == ''">Debug</Configuration>
    </PropertyGroup>

    <PropertyGroup>
        <DataRootFolder>$(MSBuildThisFileDirectory)../Data</DataRootFolder>

        <BinaryOutDir>$(MSBuildThisFileDirectory)../bin/$(Configuration)</BinaryOutDir>
        <BinaryTestsOutDir>$(BinaryOutDir)/Tests</BinaryTestsOutDir>
        <BinaryDataOutDir>$(BinaryOutDir)/Data</BinaryDataOutDir>
        <BinaryReportsOutDir>$(BinaryOutDir)/reports</BinaryReportsOutDir>

        <ReportsDir>$(MSBuildThisFileDirectory)../ReportsProcessing/reports</ReportsDir>
    </PropertyGroup>
</Project>